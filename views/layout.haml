%html
  %head
    %title
      Elisabetta
      Porcinai
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Elisabetta Porcinai - Photography - Enter the site and view my Portfolio - see photo galleries: Fashion, Portrait, Editorial and contact me." }
    %meta{ name: "keywords", content: "elisabetta, porcinai, photography, , " }
    %meta{ name: "author", content: "Francesco 'makevoid' Canessa" }
    %meta{ property: "og:title", content: "Elisabetta Porcinai - Photography" }
    %meta{ property: "og:url", content: "http://elisabettaporcinai.com" }/
    %meta{ property: "og:type", content: "website" }/
    %meta{ property: "og:site_name", content: "ElisabettaPorcinai" }/
    %meta{ property: "og:image", content: "http://elisabettaporcinai.com/imgs/elisabetta_porcinai_fb.png" }/
    %meta{ property: "fb:admins", content: "elisabetta.porcinai, makevoid" }/
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }


    %script{ src: "/js/modernizr.js", type: "text/javascript" }

  %body.dark
    - unless ["/", "/editorial", "/contact"].include? request.path
      #prev <
      #next >
    #container

      .handles
        #invert_bg
      %header
        %h1
          %a{ href: "/" }
            Elisabetta
            %span.p Porcinai
            %span.grasso .
        .headline Photography
      %ul#nav
        %li
          - link_to "Fashion", "/fashion"
        %li
          - link_to "Portrait", "/portrait"
        %li
          - link_to "Music", "/music"
        /
          %li
            - link_to "Diary", "#"
        .clear
        %li
          - link_to "Editorial", "/editorial"
        %li
          - link_to "Personal", "/personal"
        /
          %li
            - link_to "Blog", "/blog"
        %li
          - link_to "Contact", "/contact"

      .clear
      #content
        = yield
      %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/master.js", type: "text/javascript" }
    :javascript
      document.write(unescape('%3Cscript type="text/javascript" src="'+document.location.protocol+'//dnn506yrbagrg.cloudfront.net/pages/scripts/0011/5433.js"%3E%3C%2Fscript%3E'))

    - if ENV["RACK_ENV"] == "production"
      %script{ :type => "text/javascript" }
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      %script{ :type => "text/javascript" }
        try {
        var pageTracker = _gat._getTracker("UA-10682634-8");
        pageTracker._setDomainName("none");
        pageTracker._setAllowLinker(true);
